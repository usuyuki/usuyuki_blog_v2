---
import { Image } from "astro:assets";
---

<div class="flex justify-center flex-wrap">
	<a
		href="https://twitter.com/usuyuki26"
		class="mx-4 my-4 flex items-center"
		target="_blank"
		rel="noopener noreferrer"
	>
		<Image
			src="/images/icon/Twitter-social-icons-circle-blue.png"
			width="24"
			height="24"
			alt="twitter"
			class="w-6 aspect-square"
		/>
		<p class="ml-2 mt-0">Twitter</p>
	</a>
	<a
		href="https://m5y.usuyuki.net/@usuyuki"
		class="mx-4 my-4 flex items-center"
		target="_blank"
		rel="noopener noreferrer"
	>
		<!-- misskey logoじゃっかん余白多めなので大きく取る -->
		<Image
			width="24"
			height="24"
			src="/images/icon/misskey-logo.png"
			alt="misskey"
			class="w-8 aspect-square"
		/>
		<p class="ml-2 mt-0">Misskey</p>
	</a>
	<a
		href="https://github.com/usuyuki"
		class="mx-4 my-4 flex items-center"
		target="_blank"
		rel="noopener noreferrer"
	>
		<Image
			width="24"
			height="24"
			src="/images/icon/github-mark.png"
			alt="github"
			class="w-6 aspect-square"
		/>
		<p class="ml-2 mt-0">GitHub</p>
	</a>
	<a
		href="https://usuyuki.net"
		class="mx-4 my-4 flex items-center"
		target="_blank"
		rel="noopener noreferrer"
	>
		<Image
			width="24"
			height="24"
			src="/images/icon/portfolio-logov2.svg"
			alt="github"
			class="w-6 aspect-square"
		/>
		<p class="ml-2 mt-0">ポートフォリオ</p>
	</a>
</div>
