---
import type { TOCType } from '~/types/TOCType';
type Props = {
	tocList: TOCType[];
};
const { tocList } = Astro.props;
---

{
	tocList.length !== 0 ? (
		// text-2,text-3のようにサイズに応じて出てくるので、これをcssで当てる
		<div class="ghost-toc shadow-md border-dotted border-2 border-pink p-4 rounded-xl">
			<h3 class="text-2xl text-center">目次</h3>
			<ol class="">
				{tocList.map((toc: TOCType) => (
					<li class={`my-2 text-${toc.heading}`}>
						<a class="flex flex-row items-center" href={`#${toc.id}`}>
							<span class="w-4 h-4 rounded-full border-2 border-blue hover:bg-blue duration-300" />
							<span class="pl-2">{toc.title}</span>
						</a>
					</li>
				))}
			</ol>
		</div>
	) : (
		''
	)
}
