---
import type { TagType } from '~/types/TagType';
interface Props {
	tags: TagType[];
}
const { tags } = Astro.props;
---

{
	tags ? (
		<div class="flex justify-center flex-wrap">
			{tags.map((tag: any) =>
				tag.visibility === 'public' ? (
					<a href={`/tags/${tag.slug}`} class="text-center my-2 mx-2">
						🏷{tag.name}
					</a>
				) : (
					''
				)
			)}
		</div>
	) : (
		''
	)
}
