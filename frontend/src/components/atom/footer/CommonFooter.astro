---
import SocialIcon from '~/components/atom/SocialIcon.astro';
---

<footer>
	<p class="text-center mt-2 mb-2 mx-2 text-sm">copyright usuyuki</p>
	<a
		href="aboutThisSite"
		class="mx-2 my-2 flex items-center"
		target="_blank"
		rel="noopener noreferrer"
	>
		<p class="text-center text-sm">このサイトについて</p>
	</a>
	<SocialIcon />
</footer>
<style>
	footer {
		min-height: var(--footer-height);
		margin-top: 100px;
		display: flex;
		align-items: center;
		flex-direction: column;
		box-shadow: inset 0px 4px 4px rgba(0, 0, 0, 0.25);
	}
	footer > div {
		max-width: var(--main-max-width);
	}
</style>
